{
  "moduleFileExtensions": [
    "js",
    "json",
    "ts"
  ],
  "rootDir": "../",
  "testEnvironment": "node",
  "testRegex": ".*\\.int-spec\\.ts$|.*\\.integration\\.spec\\.ts$",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.ts"
  ],
  "coverageDirectory": "./coverage",
  "coveragePathIgnorePatterns": [
    "node_modules",
    ".module.ts$",
    ".entity.ts$",
    ".dto.ts$",
    ".types.ts$"
  ],
  "testTimeout": 60000,
  "setupFiles": [
    "<rootDir>/test/setup-integration.ts"
  ]
}